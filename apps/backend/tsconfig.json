{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",

    // 打开所有推荐 TS 特性
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2020",
    "isolatedModules": true,
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@cache/*": ["cache/*"],
      "@domain/*": ["domain/*"],
      "@tbm/*": ["domain/tbm/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@core/*": ["core/*"],
      "@events/*": ["events/*"],
      "@notify/*": ["notify/*"],
      "@processing/*": ["processing/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
